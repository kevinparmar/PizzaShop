@model IEnumerable<OrderDetail> // Assuming OrderDetail is the model for order details

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-5">
    <h2>Order Details</h2>
    @if (Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Pizza</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderDetail in Model)
                {
                    <tr>
                        <td>@orderDetail.Pizza.Name</td>
                        <td>@orderDetail.UnitPrice.ToString("C")</td>
                        <td>@orderDetail.Quantity</td>
                        <td>@((orderDetail.UnitPrice * orderDetail.Quantity).ToString("C"))</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end">
            <h4>Total: @Model.Sum(orderDetail => orderDetail.UnitPrice * orderDetail.Quantity).ToString("C")</h4>
        </div>
    }
    else
    {
        <p>No order details found.</p>
    }
</div>
